<div style="display: none" class="alert alert-primary" id="alert" role="alert">
    <span id="nameStatus"></span></br>
</div>
{{ form_start(form) }}

<div class="card-body">
    <div id="contact" class="row">
        <div class="form-group  col-md-3">
            <div class="form-group row">
                {{ form_row(form.lastName) }}
                {{ form_errors(form.lastName) }}

            </div>
        </div>
        <div class="form-group col-md-3">
            <div class="form-group row">
                {{ form_row(form.firstName) }}
                {{ form_errors(form.firstName) }}
            </div>
        </div>

        <div class="form-group col-md-3">
            <div class="form-group row">
                {{ form_row(form.email) }}
                {{ form_errors(form.email) }}
            </div>
        </div>
        <div class="form-group mt-4  col-md-3">
            <div class="form-group row">
                <span id="checkEmail" class="btn btn-info col-md-4">valider</span>
                <div id="stateEmail" class="col-md-10">
                    <div style="display: none" class="progress" id="progress">
                        <div class="progress-bar progress-bar-striped progress-bar-animated bg-warning "
                             role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"
                             style="width: 100%"></div>
                    </div>
                    <div style="display: none" id="success" class="text-success"> Email valide</div>
                    <div style="display: none" id="error" class="text-danger"> Email invalide</div>
                </div>
            </div>

        </div>
    </div>


</div>

<div class="row">
    <div class="col-lg-12">
        <div class="text-right">
            <button class="btn btn-info" type="submit">Envoyer</button>
        </div>
    </div>
</div>
{{ form_end(form) }}


