{% extends 'base.html.twig' %}

{% block body %}

    <div><h4 class="text-center">Liste des adresses [ {{ contact.nom }} {{ contact.prenom }} : {{ contact.email }}
            ]</h4></div>

    {% if addresses is not empty %}
        <div class="row row col-md-12 pull-right ">
            <a href="{{ path('address-add') }}" class="btn btn-primary btn-xs pull-right"><b>+</b> Ajouter une
                adresse</a>
        </div>

        <div class="row col-md-12 ">
        <table class="table table-striped custab">
            <thead>
            <tr>
                <th>ID</th>
                <th>Numero</th>
                <th>Rue</th>
                <th>Code Postal</th>
                <th>ville</th>
                <th>pays</th>
                <th class="text-center">Action</th>
            </tr>
            </thead>
            {% for addresse in addresses %}
                <tr>
                    <td>{{ addresse.id|e }}</td>
                    <td>{{ addresse.number|e }}</td>
                    <td>{{ addresse.street|e }}</td>
                    <td>{{ addresse.postalCode|e }}</td>
                    <td>{{ addresse.city|e }}</td>
                    <td>{{ addresse.country|e }}</td>
                    <td class="text-center">
                        <a class='btn btn-info btn-xs' href="{{ path('address_edit', {'id': address.id}) }}"><span
                                    class="glyphicon glyphicon-edit"></span> Edit</a>
                        <a href="{{ path('address_delete', {'id': address.id}) }}" class="btn btn-danger btn-xs"><span
                                    class="glyphicon glyphicon-remove"></span> Del</a></td>
                </tr>
            {% endfor %}

        </table>
    {% endif %}
    <p>Pas d'adresses</p>
    <a href="{{ path('address-add') }}" class="btn btn-primary btn-xs pull-right"><b>+</b> Ajouter une adresse</a>
    </div>
{% endblock %}
